@page "/product/{id:int}"
@using System.Globalization

@inject IViewProduct _viewProduct

<h3>Product Details</h3>

<div class="card" style="width: 28rem;">
    <div class="card-body">
        <img src="@_product.Image" />
        <h5 class="card-title">@_product.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@_product.Brand</h6>
        <hr />
        <p>
            Price: <label style="color:darkred">@_product.Price.ToString("c", new CultureInfo("en-ZA"))</label>
        </p>
        <p class="card-text">@_product.Description</p>
    </div>
</div>
<br/>
<NavLink href="products">Back to Products</NavLink>

@code {
    private Product _product;

    [Parameter]
    public int Id { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (Id > 0)
            _product = _viewProduct.Execute(Id);

    }



}
